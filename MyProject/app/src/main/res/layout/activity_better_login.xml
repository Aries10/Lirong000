<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bawei.myproject.BetterLoginActivity">

    <LinearLayout
        android:background="@drawable/bottomborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_better_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/leftback"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="登录今日头条"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:background="@mipmap/pic_login"/>
        <Button
            android:id="@+id/bt_better_login"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="#FE3232"
            android:text="手机号登录"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:textSize="15sp"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@drawable/buttonstyle"
            android:text="注册新账号"
            android:textColor="#FE4545"
            android:layout_marginTop="15dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="—————  其他登录方式  —————"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_qq_login_normal"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_weibo_login_normal"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_tencent_login_normal"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_renren_login_normal"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
